<svg width="1920" height="1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="heroGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1A3D7C;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#2E5BA8;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1A3D7C;stop-opacity:1" />
    </linearGradient>
    <pattern id="dots" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
      <circle cx="2" cy="2" r="1.5" fill="rgba(255,255,255,0.1)"/>
    </pattern>
  </defs>
  
  <!-- Background gradient -->
  <rect width="1920" height="1080" fill="url(#heroGradient)"/>
  
  <!-- Dot pattern overlay -->
  <rect width="1920" height="1080" fill="url(#dots)"/>
  
  <!-- Abstract geometric shapes representing innovation/global connection -->
  <g opacity="0.3">
    <!-- Large circles representing global nodes -->
    <circle cx="300" cy="300" r="150" fill="none" stroke="#F26522" stroke-width="3"/>
    <circle cx="1620" cy="780" r="200" fill="none" stroke="#F26522" stroke-width="3"/>
    <circle cx="960" cy="540" r="100" fill="none" stroke="white" stroke-width="2"/>
    
    <!-- Connection lines -->
    <line x1="300" y1="300" x2="960" y2="540" stroke="#F26522" stroke-width="2" opacity="0.5"/>
    <line x1="960" y1="540" x2="1620" y2="780" stroke="#F26522" stroke-width="2" opacity="0.5"/>
    
    <!-- Small nodes -->
    <circle cx="300" cy="300" r="12" fill="#F26522"/>
    <circle cx="960" cy="540" r="12" fill="white"/>
    <circle cx="1620" cy="780" r="12" fill="#F26522"/>
  </g>
  
  <!-- Abstract building/factory shapes -->
  <g opacity="0.2" transform="translate(1400, 400)">
    <rect x="0" y="200" width="80" height="300" fill="white" rx="5"/>
    <rect x="100" y="150" width="100" height="350" fill="white" rx="5"/>
    <rect x="220" y="250" width="70" height="250" fill="white" rx="5"/>
    
    <!-- Windows -->
    <g fill="#1A3D7C">
      <rect x="20" y="240" width="15" height="20" rx="2"/>
      <rect x="45" y="240" width="15" height="20" rx="2"/>
      <rect x="20" y="280" width="15" height="20" rx="2"/>
      <rect x="45" y="280" width="15" height="20" rx="2"/>
      
      <rect x="125" y="200" width="15" height="20" rx="2"/>
      <rect x="155" y="200" width="15" height="20" rx="2"/>
      <rect x="125" y="240" width="15" height="20" rx="2"/>
      <rect x="155" y="240" width="15" height="20" rx="2"/>
    </g>
  </g>
  
  <!-- Center focus area (lighter) for text overlay -->
  <ellipse cx="960" cy="540" rx="700" ry="400" fill="rgba(26, 61, 124, 0.3)"/>
  
  <!-- Accent elements -->
  <g opacity="0.6">
    <rect x="100" y="100" width="120" height="6" fill="#F26522" rx="3"/>
    <rect x="100" y="950" width="180" height="6" fill="#F26522" rx="3"/>
    <rect x="1700" y="150" width="150" height="6" fill="#F26522" rx="3"/>
  </g>
</svg>
